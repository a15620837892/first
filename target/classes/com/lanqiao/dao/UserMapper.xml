	<!-- 查询用户信息  public List<UserInfo> getUserInfo(Integer id) throws SQLException;   -->
	<select id="getUserInfo" parameterType="Integer" resultMap="myMap">
		SELECT u.*,us.sid,s.`name`,us.number 
		FROM `user` u 
		LEFT JOIN user_shares us on u.id = us.uid
		LEFT JOIN shares s on us.sid = s.id
		where u.id = #{id}
		ORDER BY us.sid asc
